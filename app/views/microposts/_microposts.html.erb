<ul class="list-unstyled">
  <% microposts.each do |micropost| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(micropost.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to micropost.user.name, user_path(micropost.user) %> <span><%= date_format(micropost.created_at) %></span>
        </div>
        <div>
        　<p><%= micropost.title %></p>
          <p>プラットフォーム条件：<%= micropost.platform %></p>
          <p><%= micropost.content %></p>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate microposts %>
</ul>