<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media mb-4">
        <div class="img-wrapper mr-4">
          <img class="rounded" src="<%= platform_image(user) %>" alt=""　width="60px" height="60px">
        </div>  
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to '詳細', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>