<div class="row">
  <div class="col-sm-6 offset-sm-3">
　　<%= form_with(model: @user, local: true) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
      <div class="text-center mb-4">
        <img style="width: 200px; height: 200px; object-fit: cover; border-radius: 50%; padding-bottom :5px" src="<%= icon_image(@user) %>" alt="">
      </div>
      
      <div class="form-group">
        <%= f.label :image, 'プロフィール画像' %>
        <%= f.file_field :image %>
      </div>

    
      <div class="form-group">
        <%= f.label :name, 'ニックネーム' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      
      <div class="col-xs-6 form-group">
        <%= f.label :platform, 'プラットフォーム', class: 'control-label' %>
        <%= f.select :platform, [["PC", "PC"], ["PS4 or Xbox", "PS4 or Xbox"], ["Switch", "Switch"], ["Mobile", "Mobile"]], {}, class: "form-control" %>
      </div>
      
      <div class="col-xs-6 form-group">
        <%= f.label :sex, '性別', class:'control-label' %>
        <%= f.select :sex, [["",""], ["女性","女性"], ["男性","男性"]], {},   class: 'form-control' %>
      </div>
 
      <div class="form-group">
        <%= f.label :address, '場所' %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>
 
 
      <div class="form-group">
        <%= f.label :introduce, '自己紹介（255文字）' %>
        <%= f.text_area :introduce, :maxlength => "255", :size => "80x5",  class: 'form-control'  %>
    　</div>
      
      <%= f.submit '完了', class: 'btn btn-primary btn-block form-control' %>
      </br>
    <% end %>
  </div>
</div>